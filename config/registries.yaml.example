registries:
  source:
    url: "docker.io"
    username: ""
    password: ""
    namespace: "library"
    
  target:
    url: "your-registry.com"
    username: "your-username"
    password: "your-password"
    namespace: "your-namespace"
    
sync_config:
  batch_size: 5
  retry_count: 3
  timeout: 300
  parallel_downloads: 2
  
image_filters:
  include_patterns:
    - "nginx:*"
    - "redis:*"
    - "mysql:*"
  exclude_patterns:
    - "*:debug"
    - "*:test"
    
logging:
  level: "INFO"
  format: "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  file: "/app/logs/sync.log"
  max_size: "100MB"
  backup_count: 5

# 示例配置 - 不同类型的私服配置
examples:
  harbor:
    name: "Harbor私服"
    type: "harbor"
    url: "harbor.example.com"
    username: "admin"
    password: "your-password"
    project: "library"
    description: "Harbor私有仓库"
    
  aliyun_acr:
    name: "阿里云ACR"
    type: "acr"
    url: "registry.cn-hangzhou.aliyuncs.com"
    username: "your-username"
    password: "your-password"
    namespace: "your-namespace"
    description: "阿里云容器镜像服务"
    
  nexus:
    name: "Nexus私服"
    type: "nexus"
    url: "nexus.example.com:8082"
    username: "nexus-user"
    password: "your-password"
    repository: "docker-hosted"
    description: "Nexus Repository Manager"
    
  huawei_swr:
    name: "华为云SWR"
    type: "swr"
    url: "swr.cn-north-4.myhuaweicloud.com"
    username: "your-username"
    password: "your-password"
    namespace: "your-namespace"
    description: "华为云容器镜像服务"
    
  tencent_tcr:
    name: "腾讯云TCR"
    type: "tcr"
    url: "your-instance.tencentcloudcr.com"
    username: "your-username"
    password: "your-password"
    namespace: "your-namespace"
    description: "腾讯云容器镜像服务" 